Процедура СинхроннаяОбработкаЗаписываетСтатистикуУспеха() Экспорт
    // Arrange
    ПотокДанных = ГенераторТестовыхДанных.ПотокДанныхВходящий(,,,,Ложь);
    Сообщение = Новый Соответствие;
    
    Мокито.Обучение(Справочники.инт_ПотокиДанных)
        .Когда("ОбработатьВходящееСообщениеПоПотоку").Пропустить()
        .Обучение(РегистрыСведений.инт_СтатистикаОбработкиСообщений)
        .Когда("ЗаписатьСтатистикуОбработкиВходящего").Пропустить()
        .Прогон();
    
    // Act
    инт_ОбработкаВходящихПотоков.ОбработкаВходящегоСообщенияПоПотоку(Сообщение, ПотокДанных);
    
    // Assert — статистика должна быть записана ровно 1 раз
    Мокито.Проверить(РегистрыСведений.инт_СтатистикаОбработкиСообщений)
        .КоличествоВызовов("ЗаписатьСтатистикуОбработкиВходящего")
        .Равно(1);
    
    // Assert — вызов должен быть с Успешно = Истина
    МассивВызовов = Мокито.Проверить(РегистрыСведений.инт_СтатистикаОбработкиСообщений)
        .Вызовы("ЗаписатьСтатистикуОбработкиВходящего");
    
    ЮТест.ОжидаетЧто(МассивВызовов[0].Параметры[3])
        .ИмеетТип("Булево")
        .Равно(Истина);
