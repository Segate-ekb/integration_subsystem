	ИмяКолонки = Сред(ЭлементКолонка.Имя, СтрДлина(ЭлементТаблица.Имя) + 1);
	
	ТекущиеДанные = ЭлементТаблица.ТекущиеДанные;
	Возврат ТекущиеДанные[ИмяКолонки];
	
